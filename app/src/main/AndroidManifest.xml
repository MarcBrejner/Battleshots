<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.battleshots">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/icon"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/icon"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".JoinGameActivity"
            android:label="@string/title_activity_join_game"
                  android:noHistory="true"
                  android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".StartMenuActivity"
                  android:screenOrientation="portrait"
        />
        <activity android:name=".CreateGameActivity"
                    android:noHistory="true"
        android:screenOrientation="portrait"/>
        <activity android:name=".SplashScreen"
        android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".setupActivity"
        android:noHistory="true"
        android:screenOrientation="portrait"/>
        <activity android:name=".BattleActivity"
        android:screenOrientation="portrait"/>
        <activity android:name=".gameRulesActivity"
                  android:screenOrientation="portrait" />
    </application>



</manifest>